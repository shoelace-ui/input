/**
 * Module dependencies
 */

@require 'shoelace-ui-duration'
@require 'shoelace-ui-font-size'
@require 'shoelace-ui-line-height'
@require 'shoelace-ui-padding'
@require 'shoelace-ui-gray'

/**
 * Define `input` variables and placeholder
 */

input--color          ?= gray--darkest
input--font-size-base ?= font-size--base

input--bg          ?= white
input--bg-disabled ?= gray--lighter

input--border-width       ?= 1px
input--border-color       ?= desaturate(lighten(input--color, 70%), 90%)
input--border-color-focus ?= desaturate(lighten(input--color, 60%), 90%)
input--border-radius      ?= 2px

input--box-shadow       ?= inset 0 1px 1px rgba(0,0,0, .055)
input--box-shadow-focus ?= inset 0 1px 1px rgba(0,0,0, .055), 0 0 8px input--border-color-focus

input--height-base  ?= (line-height--base-computed + ((padding--base-vertical + input--border-width) * 2))
input--height-large ?= (line-height--large-computed + ((padding--large-vertical + input--border-width) * 2))
input--height-small ?= (line-height--small-computed + ((padding--small-vertical + input--border-width) * 2))

input--transition-property   ?= border-color box-shadow
input--transition-duration   ?= duration--base
input--transition-timing     ?= ease-in-out
